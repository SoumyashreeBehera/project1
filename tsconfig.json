{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      // "@containers/*": [
      //   "./src/containers/*"
      // ],
      // "@redux/*": [
      //   "./src/redux/*"
      // ],
      "@components/*": ["./src/components/*"],
      // "@hooks/*": [
      //   "./src/hooks/*"
      // ],
      // "@hooks": [
      //   "./src/hooks/index"
      // ],
      "@theme/*": ["./src/theme/*"]
      // "@utils/*": [
      //   "./src/utils/*"
      // ],
      // "@assets/*": [
      //   "./src/assets/*"
      // ],
      // "@uikit/*": [
      //   "./src/uikit/*"
      // ],
      // "@uikit": [
      //   "./src/uikit/index"
      // ],
      // "@constants/*": [
      //   "./src/constants/*"
      // ],
      // "@constants": [
      //   "./src/constants/index"
      // ],
    }
  },
  "ignorePatterns": ["scripts/"],
  "exclude": ["scripts"],
  "include": ["src", "public/websocket.js"]
}
